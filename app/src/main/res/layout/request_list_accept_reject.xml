<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/request_accept_reject_Cardview"
        style="@style/CardView"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:layout_margin="4dp"
        android:elevation="4dp"
        tools:targetApi="lollipop">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/request_accept_reject_profileimage"
                android:layout_width="65dp"
                android:layout_height="64dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:src="@drawable/profile_logo" />

            <Button
                android:id="@+id/request_accept_button"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="11dp"
                android:background="@drawable/rounded_button_2"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/request_accept_reject_name"
                android:layout_width="168dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="94dp"
                android:layout_marginTop="14dp"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/request_accept_reject_ReqImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/request_accept_reject_name"
                app:srcCompat="@drawable/requested_logo" />

            <ImageView
                android:id="@+id/request_accept_reject_locImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="103dp"
                app:srcCompat="@drawable/location_logo" />

            <TextView
                android:id="@+id/request_accept_reject_location"
                android:layout_width="234dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="120dp" />

            <Button
                android:id="@+id/request_accept_reject_mobile"
                android:layout_width="141dp"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/request_accept_reject_locImg"
                android:background="@drawable/rounded_button" />

            <ImageView
                android:id="@+id/request_accept_reject_SentImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/request_accept_reject_name"
                app:srcCompat="@drawable/sent_logo" />

            <ImageView
                android:id="@+id/request_accept_reject_sentreqImg"
                android:layout_width="11dp"
                android:layout_height="11dp"
                android:layout_alignStart="@+id/request_accept_reject_locImg"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/sent_request_icon" />

            <ImageView
                android:id="@+id/request_accept_reject_mapImg"
                android:layout_width="11dp"
                android:layout_height="11dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/request_accept_reject_mobile"
                app:srcCompat="@drawable/map_logo" />

            <TextView
                android:id="@+id/request_accept_reject_choosemap"
                android:layout_width="93dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/request_accept_reject_name" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>